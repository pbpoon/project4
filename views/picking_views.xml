<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="stock_picking_form_view">
            <field name="name">库存作业单</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm"/>
                        <button name="action_done" type="object" string="Done"/>
                        <field name="state" widget="statusbar" statusbar_visible="Draft,Waiting,Confirm,Done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="picking_type_id"/>
                            </group>
                            <group>
                                <field name="default_location_src_id"/>
                                <field name="default_location_dest_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="明细行">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="location_id"/>
                                        <field name="location_dest_id"/>
                                        <field name="product_id"/>
                                        <field name="pcs"/>
                                        <field name="part"/>
                                        <field name="qty"/>
                                        <field name="uom"/>
                                        <field name="package_list_id" invisible="1"/>
                                        <field name="unit_price"/>
                                        <field name="amount" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="库存移动明细行" attrs="{'invisible':[('state','=','draft')]}">
                                <field name="move_ids">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="sequence" widget="handle"/>
                                        <field name="location_id"/>
                                        <field name="location_dest_id"/>
                                        <field name="product_id"/>
                                        <field name="pcs"/>
                                        <field name="part"/>
                                        <field name="qty"/>
                                        <field name="uom"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--<record id="stock_location_tree_view" model="ir.ui.view">-->
        <!--<field name="name">作业类型列表</field>-->
        <!--<field name="model">stock.picking.type</field>-->
        <!--<field name="arch" type="xml">-->
        <!--<tree>-->
        <!--<field name="name"/>-->
        <!--&lt;!&ndash;<field name="usage"/>&ndash;&gt;-->
        <!--</tree>-->
        <!--</field>-->
        <!--</record>-->
        <record model="ir.actions.act_window" id="picking_action_window">
            <field name="name">作业操作</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="picking_type_action_window">
            <field name="name">作业类型</field>
            <field name="res_model">stock.picking.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--<record model="ir.actions.act_window" id="stock_location_action_window">-->
        <!--<field name="name">库存位置资料</field>-->
        <!--<field name="res_model">stock.location</field>-->
        <!--<field name="view_mode">tree,form</field>-->
        <!--</record>-->

        <!-- Top menu item -->
        <menuitem name="作业类型" id="picking_type_menu_list" parent="setting_menu_sidebar"
                  action="picking_type_action_window"/>
        <!-- menu categories -->
        <menuitem name="库存作业" id="picking_menu_sidebar" parent="stock_menu_root"/>

        <menuitem name="作业单" id="location_menu_list" parent="picking_menu_sidebar"
                  action="picking_action_window"/>

    </data>
</odoo>